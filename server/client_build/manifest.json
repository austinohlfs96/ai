{
  "name": "SpotSurfer AI",
  "short_name": "SpotSurfer",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#0f0f0f",
  "theme_color": "#ff7a00",
  "icons": [
    {
      "src": "icons/icon-192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "apple-mobile-web-app-capable": "yes",
  "apple-mobile-web-app-status-bar-style": "black-translucent",
  "apple-mobile-web-app-title": "SpotSurfer",
  "permissions": {
    "notifications": {
      "description": "Required for sending trip tracking notifications"
    },
    "background-sync": {
      "description": "Required for sending notifications when the app is closed"
    },
    "periodic-background-sync": {
      "description": "Required for sending periodic notifications"
    }
  },
  "background_sync": {
    "minimum_interval": 60000, 
    "max_attempts": 3
  },
  "periodic_sync": {
    "minimum_interval": 60000, 
    "max_attempts": 3
  }
}
